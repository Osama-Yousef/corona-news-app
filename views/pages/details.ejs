    <title>details</title>
</head>
<body>
    
    <header>
        <h1>
            MY NEWS DETAILS 
        </h1>
    </header>

    <main>

<div class="allContainer">


<div class="container">

    <h2><%=data.title%></h2>
    <h3><%=data.author%></h3>
    <img src="<%=data.image%>" alt="">
    <p><%=data.description%></p>

    <div>

<button class="showdet">update news</button>
<form action="/update/<%=data.id%>?_method=put" method="POST" class="formdet">
<input type="text" name="title" value="<%=data.title%>">
